@model AspNetCoreIdentity.Models.ResetPasswordModel




    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            @{
                if (ViewBag.status == "success")
                {
                    <div class="alert alert-info mt-3">
                        Şifreniz Başarıyla Sıfırlandı. Giriş Yapabilirsiniz.
                    </div>
                }}
            <h4 class="mt-3 text-center">Şifre Sıfırla</h4>
            <hr/>
            <form asp-action="ResetPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label"></label>
                    <input asp-for="NewPassword" class="form-control"/>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Sıfırla" class="btn btn-outline-primary"/>
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>



@model List<System.Security.Claims.Claim>
@{
    ViewData["Title"] = "Claims";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h4 class="text-center">Claims</h4>
<hr /> 


<table class="mt-2 table table-sm table-hover table-responsive">
    <thead>
    <th>Kim</th>
    <th>Dağıtıcı</th>
    <th>Ad</th>
    <th>Değer</th>
    </thead>
    
    <tbody>
    @foreach (var claim in Model)
    {
        <tr>
            <td>@claim.Subject.Name</td>
            <td>@claim.Issuer</td>
            <td>@claim.Type</td>
            <td>@claim.Value</td>
        </tr> 
    }
    </tbody>
</table>

